# Dockerfile — PHP 8.4 + Composer + ext deps for Laravel
FROM php:8.4-fpm

# install system deps & php extensions
RUN apt-get update && apt-get install -y \
    git unzip libzip-dev libonig-dev libpng-dev libicu-dev libxml2-dev \
    libpq-dev zip curl sudo \
 && docker-php-ext-install pdo_pgsql mbstring zip pcntl intl opcache xml

# install composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

WORKDIR /var/www/html

# copy composer files and install deps
COPY composer.json composer.lock ./
RUN composer install --no-dev --no-scripts --no-interaction --optimize-autoloader

# copy rest of the app
COPY . .

# optimize autoload & clear caches
RUN composer dump-autoload --optimize
RUN php artisan route:cache || true
RUN php artisan config:cache || true

# expose port (Railway expects $PORT env; we will use artisan serve in start)
EXPOSE 8000

# start command — Railway will use this unless you override
CMD ["php", "artisan", "serve", "--host=0.0.0.0", "--port=8000"]
